[Unit]
Description=MYSQL For Gogs-Server
After=docker.service

[Service]
TimeOutStartSec=10
ExecStartPre=-/usr/bin/docker kill mysql-gogs
ExecStartPre=-/usr/bin/docker rm -f mysql-gogs
ExecStart=/usr/bin/docker run --name mysql-gogs --detach --env MYSQL_ROOT_PASSWORD=coreos --env MYSQL_USER=goggy --env MYSQL_DATABASE=gogs --env MYSQL_PASSWORD=coreos mysql:5
ExecStop=/usr/bin/docker stop mysql-gogs

[Install]
WantedBy=multi-user.target
